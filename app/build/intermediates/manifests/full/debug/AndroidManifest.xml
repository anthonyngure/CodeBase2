<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ke.co.toshngure.demo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:name="ke.co.toshngure.demo.App"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ke.co.toshngure.demo.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ke.co.toshngure.demo.activity.BasicActivity"
            android:label="@string/title_activity_basic"
            android:parentActivityName="ke.co.toshngure.demo.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ke.co.toshngure.demo.activity.MainActivity" />
        </activity>
        <activity
            android:name="ke.co.toshngure.demo.activity.DataLoadingActivity"
            android:label="@string/title_activity_data_loading"
            android:parentActivityName="ke.co.toshngure.demo.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ke.co.toshngure.demo.activity.MainActivity" />
        </activity>
        <activity
            android:name="ke.co.toshngure.demo.activity.DrawableUtilsActivity"
            android:label="@string/title_activity_drawable_utils"
            android:parentActivityName="ke.co.toshngure.demo.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ke.co.toshngure.demo.activity.MainActivity" />
        </activity>
        <activity
            android:name="ke.co.toshngure.demo.activity.NetworkImageActivity"
            android:label="@string/title_activity_network_image"
            android:parentActivityName="ke.co.toshngure.demo.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ke.co.toshngure.demo.activity.MainActivity" />
        </activity>
        <activity
            android:name="ke.co.toshngure.editor.EditorActivity"
            android:label="@string/title_activity_editor"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>